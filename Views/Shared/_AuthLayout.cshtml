@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Masuk";
}
<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title — AparApps</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --brand: #e43c2f;
            --brand-dark: #b42a20;
            --ink: #0f172a;
            --muted: #64748b;
            --card: #ffffff;
            --line: #eef0f3;
        }

        /* page background */
        body {
            min-height: 100vh;
            background: radial-gradient(1200px 600px at 10% -10%, #ffe8e5 0%, transparent 60%),
                radial-gradient(900px 500px at 110% 110%, #ffe8e5 0%, transparent 55%),
                #f7f8fa;
            color: var(--ink);
            display: grid;
            place-items: center;
            padding: 16px;
        }

        /* auth card */
        .auth-card {
            width: min(980px, 100%);
            background: var(--card);
            border: 1px solid var(--line);
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(16, 24, 40, .06);
            display: grid;
            grid-template-columns: 1.1fr 1fr;
        }

        /* left art panel */
        .auth-art {
            position: relative;
            background: #0b1220;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            padding: 24px;
            isolation: isolate;
        }

        .auth-art img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            inset: 0;
            z-index: 0;
        }

        .auth-art::after {
            /* gradient overlay for readability */
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, rgba(11, 18, 32, 0.1) 0%, rgba(11, 18, 32, .75) 80%);
            z-index: 1;
        }

        .art-caption {
            position: relative;
            z-index: 2;
            color: #e2e8f0;
        }

        .art-badge {
            display: inline-block;
            padding: .375rem .6rem;
            border-radius: .6rem;
            background: rgba(255, 255, 255, .1);
            border: 1px solid rgba(255, 255, 255, .18);
            font-size: .8rem;
            margin-bottom: 10px;
        }

        /* right form panel */
        .auth-form {
            padding: 32px;
        }

        .brand {
            font-weight: 700;
            font-size: 1.25rem;
        }

        .muted {
            color: var(--muted);
        }

        .form-control {
            background: #fff;
            border-color: var(--line);
        }

        .form-control:focus {
            border-color: var(--brand);
            box-shadow: 0 0 0 .2rem rgba(228, 60, 47, .15);
        }

        .btn-brand {
            background: var(--brand);
            color: #fff;
            border: none;
            font-weight: 700;
        }

        .btn-brand:hover {
            background: var(--brand-dark);
            color: #fff;
        }

        .card-footer {
            border-top: 1px solid var(--line);
            color: #6b7280;
        }

        /* mobile stack */
        @@media (max-width: 992px) {
            .auth-card {
                grid-template-columns: 1fr;
            }

            .auth-art {
                height: 220px;
            }
        }
    </style>
    @RenderSection("Head", required: false)
</head>

<body>

    <!-- Skip link untuk aksesibilitas keyboard -->
    <a class="visually-hidden-focusable" href="#main-content">Lewati ke konten utama</a>

    <div class="auth-card" role="region" aria-labelledby="app-title">
        <!-- LEFT: IMAGE / ART -->
        <aside class="auth-art" aria-label="Ilustrasi AparApps">
            <!-- ganti src sesuai asetmu -->
            <img src="~/images/KPC_Coal_mining.jpg" alt="" loading="lazy" decoding="async" />
            <div class="art-caption">
                <div class="art-badge">Manajemen Data Alat</div>
                @* <h1 id="app-title" class="mb-1 h4">AparApps</h1> *@
                @* <p class="small muted mb-0">Capture data lebih cepat & akurat.</p> *@
            </div>
        </aside>

        <!-- RIGHT: FORM -->
        <main id="main-content" class="auth-form">
            <header class="mb-3">
                <div class="brand">Masuk ke AparApps</div>
                <p class="muted mb-0">Gunakan Badge Number yang terdaftar</p>
            </header>

            <!--
              Penting:
              1) Pastikan view yang merender form menggunakan id="loginForm".
              2) Agar elemen di bawah ikut terkirim, mereka berada DI DALAM form.
                 Jika kamu tetap render form dari child view (@RenderBody),
                 tambahkan "form='loginForm'" pada elemen terkait. Di sini
                 aku berikan dua opsi:
                 - Opsi A (direkomendasikan): tempatkan blok controls di dalam form (lihat contoh).
                 - Opsi B: jika harus di luar, tetap kasih atribut form="loginForm".
            -->

            @* Opsi A: RenderBody berisi input fields tapi buka + tutup form dikelola di halaman ini *@
            <form id="loginForm" method="post" novalidate>
                @RenderBody() <!-- FORM FIELD kamu render di sini -->

                <hr class="my-4" aria-hidden="true" />

                @* <div class="d-grid gap-2">
                    <button class="btn btn-brand btn-lg" type="submit">Masuk</button>
                </div> *@
            </form>

            <footer class="text-center mt-4 small muted" aria-label="Hak cipta">
                © @DateTime.Now.Year PT Kaltim Prima Coal
            </footer>
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
