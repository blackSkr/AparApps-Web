@model AparAppsWebsite.Models.Petugas
@{
    ViewData["Title"] = "Detail Petugas";
}
<partial name="~/Views/Shared/_Alerts.cshtml" />
<h2 class="mb-3">Detail Petugas</h2>
<dl class="row">
    <dt class="col-sm-3">Badge</dt>
    <dd class="col-sm-9">@Model.BadgeNumber</dd>
    <dt class="col-sm-3">Nama</dt>
    <dd class="col-sm-9">@Model.EmployeeNama</dd>
    <dt class="col-sm-3">Role</dt>
    <dd class="col-sm-9">@Model.RoleNama</dd>
    <dt class="col-sm-3">Lokasi</dt>
    <dd class="col-sm-9">@Model.LokasiNama</dd>
</dl>
<div class="d-flex gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Kembali</a>
</div>
