@model AparAppsWebsite.Models.PeralatanDetailsViewModel
@{
    ViewData["Title"] = "Detail Peralatan";
    var p = Model.Peralatan;
    var apiBase = (string?)ViewBag.ApiBase ?? "";
    var fotos = p.FotoUrls ?? new List<string>();
    if (!fotos.Any() && !string.IsNullOrWhiteSpace(p.FotoPath))
    {
        var parts = p.FotoPath.Split(';', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        fotos = parts.Select(u => u.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? u : $"{apiBase}{u}").ToList();
    }
}
<partial name="~/Views/Shared/_Alerts.cshtml" />
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2>Peralatan @p.Kode</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
        <a class="btn btn-outline-secondary" asp-action="Index">Kembali</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Kode</dt>
                    <dd class="col-sm-8">@p.Kode</dd>
                    <dt class="col-sm-4">Lokasi</dt>
                    <dd class="col-sm-8">@p.LokasiNama</dd>
                    <dt class="col-sm-4">Jenis</dt>
                    <dd class="col-sm-8">@p.JenisNama</dd>
                    <dt class="col-sm-4">Spesifikasi</dt>
                    <dd class="col-sm-8">@p.Spesifikasi</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Foto</h5>
                @if (!fotos.Any())
                {
                    <div class="text-muted">Belum ada foto</div>
                }
                else
                {
                    <div class="row row-cols-2 g-2">
                        @foreach (var url in fotos)
                        {
                            <div class="col"><img src="@url" class="img-fluid rounded" /></div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Riwayat Pemeriksaan</h5>
        @if (!(Model.Riwayat?.Any() ?? false))
        {
            <div class="text-muted">Belum ada riwayat.</div>
        }
        else
        {
            // helper kecil buat ambil property by name (compatible dengan berbagai DTO)
            object? GetProp(object obj, params string[] names)
            {
                var t = obj.GetType();
                foreach (var n in names)
                {
                    var pi = t.GetProperty(n);
                    if (pi != null) return pi.GetValue(obj);
                }
                return null;
            }

            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Tanggal</th>
                            <th>Petugas</th>
                            <th>Keterangan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Riwayat)
                        {
                            var tglObj = GetProp(r, "Tanggal", "TanggalPemeriksaan", "Date");
                            DateTime? tgl = tglObj is DateTime dt ? dt : (DateTime?)null;
                            var petugas = (GetProp(r, "BadgeNumber", "PetugasBadge", "Petugas") ?? "")?.ToString();
                            var ket = (GetProp(r, "Keterangan", "Catatan", "Notes", "Deskripsi") ?? "")?.ToString();

                            <tr>
                                <td>@(tgl?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>@(string.IsNullOrWhiteSpace(petugas) ? "-" : petugas)</td>
                                <td>@(string.IsNullOrWhiteSpace(ket) ? "-" : ket)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
