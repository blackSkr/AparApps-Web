@model AparAppsWebsite.Models.Peralatan
@{
    var lokasiList = ViewBag.LokasiList as List<AparAppsWebsite.Models.DropdownItem> ?? new();
    var jenisList = ViewBag.JenisList as List<AparAppsWebsite.Models.DropdownItem> ?? new();
}
<div class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Kode</label>
        <input asp-for="Kode" class="form-control" />
        <span asp-validation-for="Kode" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Jenis</label>
        <select asp-for="JenisId" class="form-select">
            <option value="">— Pilih Jenis —</option>
            @foreach (var j in jenisList)
            {
                <option value="@j.Id">@j.Nama</option>
            }
        </select>
        <span asp-validation-for="JenisId" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Lokasi</label>
        <select asp-for="LokasiId" class="form-select">
            <option value="">— Pilih Lokasi —</option>
            @foreach (var l in lokasiList)
            {
                <option value="@l.Id">@l.Nama</option>
            }
        </select>
        <span asp-validation-for="LokasiId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Spesifikasi</label>
        <textarea asp-for="Spesifikasi" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Spesifikasi" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Exp. Date</label>
        <input asp-for="Exp_Date" type="date" class="form-control" />
    </div>

    <div class="col-md-4">
        <label class="form-label">Status (readonly)</label>
        <input value="@(Model?.Status ?? "")" class="form-control" readonly />
        <div class="form-text">Ubah status jadi <b>Exp</b> dari “Danger Zone”.</div>
    </div>

    <div class="col-md-4">
        <label class="form-label">Tanggal Update</label>
        <input value="@(Model?.Tanggal_Update_Alat?.ToString("yyyy-MM-dd HH:mm") ?? "")" class="form-control"
            readonly />
    </div>

    <div class="col-12">
        <label class="form-label">Keterangan (opsional)</label>
        <input asp-for="Keterangan" class="form-control" />
    </div>
</div>
