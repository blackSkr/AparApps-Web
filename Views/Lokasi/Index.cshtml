@model AparAppsWebsite.Models.LokasiListVM
@{
  ViewData["Title"] = "Lokasi";
  int pg = ViewBag.Page ?? Model.page;
  int pgSize = ViewBag.PageSize ?? Model.pageSize;
  int total = ViewBag.Total ?? Model.total;
  var q = (string?)ViewBag.Query ?? "";
  var last = Math.Max(1, (int)Math.Ceiling(total / (double)pgSize));
}
<partial name="~/Views/Shared/_Alerts.cshtml" />

<div class="d-flex align-items-center justify-content-between mb-3">
  <h2>Lokasi</h2>
  <a class="btn btn-primary" asp-action="Create">+ Tambah Lokasi</a>
</div>

<form class="row g-2 mb-3" method="get">
  <div class="col-md-6">
    <input class="form-control" name="q" value="@q" placeholder="Cari nama / PIC / badge" />
  </div>
  <div class="col-md-2">
    <button class="btn btn-outline-secondary w-100">Filter</button>
  </div>
</form>

@if (!(Model.items?.Any() ?? false))
{
  <div class="text-muted">Belum ada data.</div>
}
else
{
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>Nama</th>
          <th>Koordinat</th>
          <th>PIC</th>
          <th style="width:220px;"></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var x in Model.items)
        {
          <tr>
            <td>
              <div class="fw-semibold">@x.Nama</div>
              @if (!string.IsNullOrWhiteSpace(x.DetailNamaLokasi))
              {
                <div class="text-muted small">@x.DetailNamaLokasi</div>
              }
            </td>
            <td class="small text-muted">@x.lat, @(x.@long)</td>
            <td>
              <div>@x.PIC_Nama</div>
              <div class="text-muted small">
                @x.PIC_BadgeNumber
                @if (!string.IsNullOrWhiteSpace(x.PIC_Jabatan))
                {
                  <text> â€” @x.PIC_Jabatan</text>
                }
              </div>
            </td>
            <td class="text-end">
              <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@x.Id">Detail</a>
              <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@x.Id">Edit</a>
              <form asp-action="Delete" asp-route-id="@x.Id" method="post" class="d-inline"
                onsubmit="return confirm('Hapus lokasi ini?');">
                @Html.AntiForgeryToken()
                <button class="btn btn-sm btn-outline-danger">Hapus</button>
              </form>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>

  <nav class="mt-2">
    <ul class="pagination">
      <li class="page-item @(pg <= 1 ? "disabled" : "")">
        <a class="page-link" href="?page=@(pg - 1)&pageSize=@pgSize&q=@q">Prev</a>
      </li>
      <li class="page-item disabled"><a class="page-link">@pg / @last</a></li>
      <li class="page-item @(pg >= last ? "disabled" : "")">
        <a class="page-link" href="?page=@(pg + 1)&pageSize=@pgSize&q=@q">Next</a>
      </li>
    </ul>
  </nav>
}
