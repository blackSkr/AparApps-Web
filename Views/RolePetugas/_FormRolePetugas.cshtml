@model AparAppsWebsite.Models.RolePetugas
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var intervalItems = new SelectList((IEnumerable<AparAppsWebsite.Models.DropdownItem>)(ViewBag.IntervalList ?? new
    List<AparAppsWebsite.Models.DropdownItem>()), "Id", "Nama", ViewBag.IntervalSelected);
}

<div class="mb-3">
    <label asp-for="NamaRole" class="form-label">Nama Role</label>
    <input asp-for="NamaRole" class="form-control" maxlength="100" />
    <span asp-validation-for="NamaRole" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="IntervalPetugasId" class="form-label">Interval Pemeriksaan</label>
    <select asp-for="IntervalPetugasId" class="form-select" asp-items="intervalItems">
        <option value="">-- tanpa interval --</option>
    </select>
    <span asp-validation-for="IntervalPetugasId" class="text-danger"></span>
    <small class="text-muted d-block">Contoh: Bulanan (1 bulan), Triwulan (3 bulan), dst.</small>
</div>

<div class="mb-3">
    <label asp-for="Deskripsi" class="form-label">Deskripsi</label>
    <textarea asp-for="Deskripsi" class="form-control" rows="3" maxlength="500"></textarea>
    <span asp-validation-for="Deskripsi" class="text-danger"></span>
</div>

<div class="form-check form-switch mb-3">
    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
    <label class="form-check-label" asp-for="IsActive">Aktif</label>
</div>
