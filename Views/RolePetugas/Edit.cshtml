@model AparAppsWebsite.Models.RolePetugas
@{
    ViewData["Title"] = "Edit Role Petugas";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-10 col-xl-8">

            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Detail
                        </a>
                        <a asp-action="Index" class="btn btn-light">
                            <i class="fas fa-list"></i> List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        @await Html.PartialAsync("_FormRolePetugas", Model)

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Batal</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
