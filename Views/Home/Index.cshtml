@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section page_header {
    <div class="page-header">
        <h2 class="mb-0">Dashboard</h2>
        <div class="d-flex align-items-center gap-2">
            <small class="text-muted">
                Diperbarui: @Model?.GeneratedAt.ToString("dd MMM yyyy HH:mm")
            </small>
            <a class="btn btn-brand btn-primary" asp-controller="Peralatan" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Tambah Peralatan
            </a>
        </div>
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
{
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <div>@Model.ErrorMessage</div>
    </div>
}

@{
    // gunakan Context.Request (bukan Request)
    var showDebug = (Context.Request.Query["debug"].ToString() == "1");
}
@if (showDebug && !string.IsNullOrWhiteSpace(Model?.DebugInfo))
{
    <div class="card border-info mb-3">
        <div class="card-header bg-info-subtle">Debug API</div>
        <div class="card-body">
            <pre class="mb-0" style="white-space:pre-wrap">@Model.DebugInfo</pre>
        </div>
    </div>
}

<div class="row g-3">
    <!-- Peralatan -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card p-3 position-relative">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="small text-muted">Total Peralatan</div>
                    <div class="fs-4 fw-bold">
                        @((Model?.TotalPeralatan ?? 0).ToString("N0"))
                    </div>
                </div>
                <i class="bi bi-fire fs-2 text-danger" data-bs-toggle="tooltip"
                    title="Jumlah seluruh APAR yang terdaftar"></i>
            </div>
            <span class="text-muted small">Klik untuk kelola peralatan</span>
            <a class="stretched-link" asp-controller="Peralatan" asp-action="Index" aria-label="Kelola Peralatan"></a>
        </div>
    </div>

    <!-- Checklist -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card p-3 position-relative">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="small text-muted">Checklist</div>
                    <div class="fs-4 fw-bold">
                        @((Model?.TotalChecklist ?? 0).ToString("N0"))
                    </div>
                </div>
                <i class="bi bi-list-check fs-2" data-bs-toggle="tooltip" title="Jumlah pertanyaan checklist aktif"></i>
            </div>
            <span class="text-muted small">Klik untuk kelola checklist</span>
            <a class="stretched-link" asp-controller="Checklist" asp-action="Index" aria-label="Kelola Checklist"></a>
        </div>
    </div>

    <!-- Lokasi -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card p-3 position-relative">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="small text-muted">Lokasi</div>
                    <div class="fs-4 fw-bold">
                        @((Model?.TotalLokasi ?? 0).ToString("N0"))
                    </div>
                </div>
                <i class="bi bi-geo-alt fs-2" data-bs-toggle="tooltip" title="Jumlah lokasi penempatan APAR"></i>
            </div>
            <span class="text-muted small">Klik untuk kelola lokasi</span>
            <a class="stretched-link" asp-controller="Lokasi" asp-action="Index" aria-label="Kelola Lokasi"></a>
        </div>
    </div>

    <!-- Petugas -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card p-3 position-relative">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="small text-muted">Petugas</div>
                    <div class="fs-4 fw-bold">
                        @((Model?.TotalPetugas ?? 0).ToString("N0"))
                    </div>
                </div>
                <i class="bi bi-people fs-2" data-bs-toggle="tooltip" title="Jumlah petugas terdaftar"></i>
            </div>
            <span class="text-muted small">Klik untuk kelola petugas</span>
            <a class="stretched-link" asp-controller="Petugas" asp-action="Index" aria-label="Kelola Petugas"></a>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12">
        <div class="card p-3">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Quick Actions</h5>
                <span class="badge text-bg-light">v1</span>
            </div>
            <div class="mt-3 d-flex flex-wrap gap-2">
                <a class="btn btn-outline-secondary" asp-controller="Maintenance" asp-action="Index">
                    <i class="bi bi-clipboard-check me-1"></i> Lihat Maintenance
                </a>
                <a class="btn btn-outline-secondary" asp-controller="Peralatan" asp-action="Index">
                    <i class="bi bi-fire me-1"></i> Kelola Peralatan
                </a>
                <a class="btn btn-outline-secondary" asp-controller="Checklist" asp-action="Index">
                    <i class="bi bi-list-check me-1"></i> Kelola Checklist
                </a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Aktifkan Bootstrap tooltip
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
            new bootstrap.Tooltip(el);
        });
    </script>
}
