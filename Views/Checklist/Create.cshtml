@* Views/Checklist/Create.cshtml *@
@model AparAppsWebsite.Models.Checklist

@{
    ViewData["Title"] = "Tambah Checklist";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tambah Checklist Baru</h3>
                </div>

                <form asp-action="Create" method="post">
                    <div class="card-body">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Error
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="JenisId" class="form-label">
                                        Jenis Peralatan <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="JenisId" class="form-select" id="jenisSelect">
                                        <option value="">-- Pilih Jenis Peralatan --</option>
                                        @if (ViewBag.JenisList != null)
                                        {
                                            @foreach (var jenis in ViewBag.JenisList as
                                                                                    List<AparAppsWebsite.Models.DropdownItem>)
                                            {
                                                <option value="@jenis.Id">@jenis.Nama</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="JenisId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Pertanyaan" class="form-label">
                                        Pertanyaan Checklist <span class="text-danger">*</span>
                                    </label>
                                    <textarea asp-for="Pertanyaan" class="form-control" rows="4"
                                        placeholder="Contoh: Apakah kondisi selang masih baik? Apakah pressure gauge menunjukkan angka normal?"></textarea>
                                    <span asp-validation-for="Pertanyaan" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Buat pertanyaan yang spesifik dan mudah dijawab (maksimal 500 karakter)
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-lightbulb"></i>
                                    <strong>Tips Pertanyaan Checklist:</strong>
                                    <ul class="mb-0 mt-2">
                                        <li>Gunakan bahasa yang jelas dan mudah dipahami</li>
                                        <li>Fokus pada aspek teknis yang dapat diperiksa secara visual</li>
                                        <li>Gunakan pertanyaan Yes/No untuk kemudahan mobile app</li>
                                        <li>Pertimbangkan safety aspect dalam setiap pertanyaan</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        @if (ViewBag.JenisList == null ||
                                                ((List<AparAppsWebsite.Models.DropdownItem>)ViewBag.JenisList).Count == 0)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Perhatian:</strong> Belum ada data Jenis Peralatan.
                                <a href="@Url.Action("Index", "JenisPeralatan")" class="alert-link">Tambah Jenis
                                    Peralatan</a> terlebih dahulu.
                            </div>
                        }
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Kembali
                            </a>
                            <div>
                                <a href="@Url.Action("Bulk")" class="btn btn-success">
                                    <i class="fas fa-layer-group"></i> Bulk Create
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Simpan
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}